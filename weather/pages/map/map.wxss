/* pages/map/map.wxss */
map{
        width: 100%;
        height: 100%;
}
.btn{
        width: 50rpx;
        height: 60rpx;
        background-color: rgba(8, 8, 8, 0.2);
        position: fixed;
        top: 15%;
        left: 50rpx;
        z-index: 999;
        border-radius: 30rpx;
        line-height: 60rpx;
        color: #fff;
        padding-left: 50rpx;
        /* x y 模糊距离  模糊程度 */
        box-shadow: 1rpx 1rpx 1rpx 1rpx rgba(0,0,0,0.4)
}
.icon{
        width: 40rpx;
        height: 40rpx;
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        margin: auto;
}