.content .head {
  position: relative;
  width: 100%;
  height: 150px;
  z-index: 0;
}
.content .head .canvas {
    position: absolute;
    bottom: -30px;
    right: 5px;
    border-radius: 100%;
    background-color: #fff;
    z-index: 8;
}
.content .head .hide {
    display: none;
}
.content .head .show {
    display: block;
}
.content .head .dateWeather {
    position: absolute;
    top: 0;
    left: 0;
    width: calc(100% - 65px);
    height: 150px;
    z-index: 80;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.content .head .dateWeather .item {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
}
.content .head .weatherIcon {
    width: 50px;
    height: 50px;
}
.content .head .date {
    font-size: 25px;
    color: #000000;
    text-align: center;
}
.content .head .weather {
    text-align: center;
}
.content .head .weather .temperature {
      font-size: 36px;
      margin-top: 38px;
      font-family: "\5FAE\8F6F\96C5\9ED1";
}
.content .head .weather .w {
      font-size: 15px;
}
.content .head .weather .f {
      font-size: 9px;
}
.content .head .locatioin {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    width: 100%;
    font-size: 13px;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
}
.content .head .locatioin .icon {
      vertical-align: text-bottom;
      width: 13px;
      height: 17px;
}
.content .head .ratebox {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
}
.content .head .percent {
    position: absolute;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    width: 100%;
    height: 150px;
    top: 0;
    right: 0;
    background-color: rgba(255, 255, 255, 0.5);
    z-index: 8;
}
